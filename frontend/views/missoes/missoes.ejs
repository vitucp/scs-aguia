  <div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="d-flex justify-content-center align-items-center">
              <img src="https://img.icons8.com/?size=100&id=AkU8bU0L2EdG&format=png&color=000000" alt="">
            </div>
            <h5 class="card-header text-center">Cadastro por Etapas</h5>
            <div class="card-body">
              <form id="multiStepForm">
                <!-- Etapa 1: Dados Pessoais -->
                <div class="step active" id="step1">
                  <h5> Dados da Missão</h5>

                  <div class="mb-3">
                    <label class="form-label">Nome da Missão</label>
                    <input type="text" class="form-control border border-dark" name="mission" required />
                  </div>


                  <div class="mb-3">
                    <label class="form-label">Chafe da missão</label>
                    <input type="text" class="form-control border border-dark" name="missionCheif" required />
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Tipo da Missão</label>
                    <select name="session" class="select2 form-select border border-dark">
                      <option value=""></option>
                      <option value="operational">Operacional</option>
                      <option value="logistics">Logística</option>
                      <option value="null">nenhuma</option>
                    </select>
                    
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Descrição</label>
                    <textarea class="form-control border border-dark" name="description" rows="4" required></textarea>
                  </div>
                  


                  <button type="button" class="btn btn-primary" onclick="nextStep()">Próxima Etapa</button>
                </div>
          
                <!-- Etapa 2: Endereço -->
                <div class="step" id="step2">
                  <h5>Data</h5>
                  

                  
                  <div class="mb-3">
                    <label class="form-label">evento</label>
                    <input type="text" class="form-control border border-dark" name="road" required />
                  </div>

















                  



                  <button type="button" class="btn btn-secondary" onclick="prevStep()">Voltar</button>
                  <button type="button" class="btn btn-primary" onclick="nextStep()">Próxima Etapa</button>
                </div>
          
                <!-- Etapa 3: Informações Adicionais -->
                <div class="step" id="step3">
                  <h5>Etapa 3: Informações Adicionais</h5>
                  <div class="mb-3">
                    <label class="form-label">Telefone</label>
                    <input type="text" class="form-control border border-dark" name="tel" required />
                  </div>
                  <div class="mb-3">
                    <label class="form-label">CPF</label>
                    <input type="text" class="form-control border border-dark" name="cpf" required />
                  </div>
                  <button type="button" class="btn btn-secondary" onclick="prevStep()">Voltar</button>
                  <button type="submit" class="btn btn-success">Finalizar Cadastro</button>
                </div>
              </form>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>

  <script>
    let currentStep = 0;
    const steps = document.querySelectorAll('.step');

    function showStep(index) {
      steps.forEach((step, i) => {
        step.classList.toggle('active', i === index);
      });
      currentStep = index;
    }

    function nextStep() {
      if (currentStep < steps.length - 1) {
        showStep(currentStep + 1);
      }
    }

    function prevStep() {
      if (currentStep > 0) {
        showStep(currentStep - 1);
      }
    }

    document.getElementById('multiStepForm').addEventListener('submit', (event) => {
      event.preventDefault();
      alert('Cadastro finalizado!');
      // Lógica de envio do formulário...
    });
  </script>
